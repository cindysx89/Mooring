
<div class="container">
  <div class="form-wrapper">
    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "flatpickr"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "flatpickr"} %>
      <%= f.input :location, collection: @moorings.all %>


      <%= f.button :submit, "Submit", class: "btn btn-danger" %>
    <% end %>

  </div>
</div>
