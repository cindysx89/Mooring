<div id="mooring-id" class="container">

  <div class="mooring-details">
    <h2>Location</h2>
    <h2 id="location"><%= @mooring.location %></h2>
    <h2>Price</h2>
    <h2 id="location"><%= @mooring.price %></h2>
  </div>

  <div class="mooring-image">
    <%= cl_image_tag @mooring.photo, height: 300, width: 400, crop: :fill %>
  </div>

  <div id="date-booker" class="form-wrapper">
    <%= simple_form_for [@mooring, @booking] do |f| %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "flatpickr"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "flatpickr"} %>
    <br>
    <%= f.button :submit, "Submit", class: "btn btn-danger", id: "ferry" %>
    <% end %>
  </div>
</div>
